color.toWarm().getColorSample("Warm Shades 1"));			addSample(color.toWarmBlack().getColorSample("Warm Shades 2"));			addSample(color.toWarmWhite().getColorSample("Warm Shades 3"));			addSample(color.toWeak().getColorSample("Weak Shades 1"));			addSample(color.toWeakBlack().getColorSample("Weak Shades 2"));		}		private function addSample(sample : Sprite) : void {			_currentWidth = _currentWidth + 150 + 10; 			sample.x = _currentWidth;			sample.y = _currentHeight;			addChild(sample);			if(150 + _currentWidth > 800) {				_currentHeight = _currentHeight + 150 + 10;				_currentWidth = -150;			}		}	}}