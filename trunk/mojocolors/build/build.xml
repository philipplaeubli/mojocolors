<?xml version="1.0" encoding="UTF-8"?>
<project name="testAsDoc" default="release">
	<!-- import the settings -->
	<property file="../build.properties"/>
	<target name="asdoc">
		<!-- delete all files in the doc dir -->
		<delete includeemptydirs="true">
			<fileset dir="${project.doc}" includes="**/*" />
		</delete>
		<!-- create docs -->
		<exec executable="${common.asdoc}"> 
		    <arg line="	-doc-sources '${project.src}' 
		    		-output '${project.doc}' 
		    		-main-title '${project.title}' 
		    		-window-title '${project.title}'" /> 
		</exec>
	</target>
	<target name="release">
			<input addproperty="version" message="give the zip a name" defaultvalue="v"/>	
			<zip destfile="${project.release}/mojocolors-${version}.zip">
				<zipfileset dir="${project.src}" >
					
				</zipfileset>
				<zipfileset file="../LICENSE.txt"></zipfileset>
			</zip>
	</target>
</project>